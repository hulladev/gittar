{
  "name": "@hulla/gittar",
  "version": "0.0.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "oxfmt && oxlint && bun build src/index.ts --outdir dist --target bun --format esm --minify && bun build src/index.ts --outfile dist/index.cjs --target bun --format cjs --minify",
    "test": "bun test",
    "commit": "cz",
    "release": "bun run build && bun publish",
    "lint": "oxlint",
    "format": "oxfmt"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/bun": "latest",
    "commitizen": "^4.3.1",
    "cz-emoji": "^1.3.2-canary.2",
    "oxfmt": "^0.20.0",
    "oxlint": "^1.35.0",
    "typescript": "^5"
  },
  "peerDependencies": {},
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    },
    "cz-emoji": {
      "skipScope": true,
      "types": [
        {
          "emoji": "‚úÖ",
          "code": ":white_check_mark: feat:",
          "description": "a new functionality",
          "name": "feat"
        },
        {
          "emoji": "üêû",
          "code": ":lady_beetle: fix:",
          "description": "a bug fix",
          "name": "fix"
        },
        {
          "emoji": "üîß",
          "code": ":wrench: update:",
          "description": "a code change that neither fixes a bug nor adds a feature",
          "name": "update"
        },
        {
          "emoji": "üìö",
          "code": ":books: docs:",
          "description": "documentations",
          "name": "docs"
        },
        {
          "emoji": "üß™",
          "code": ":test_tube: tests:",
          "description": "tests",
          "name": "tests"
        },
        {
          "emoji": "ü™õ",
          "code": ":screwdriver: config:",
          "description": "configuration files",
          "name": "config"
        },
        {
          "emoji": "ü§ñ",
          "code": ":robot: devops:",
          "description": "ci/cd or other form of automation",
          "name": "devops"
        },
        {
          "emoji": "‚ôªÔ∏è",
          "code": ":recycle: cleanup:",
          "description": "code cleanup",
          "name": "cleanup"
        },
        {
          "emoji": "üì¶",
          "code": ":package: release:",
          "description": "new release bundle",
          "name": "release"
        }
      ]
    }
  }
}
